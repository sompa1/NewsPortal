@model List<CategoryViewModel>
@{
    ViewData["Title"] = "Index";
}
<div><b>Table Format Data Displaying in ForEach</b><br /></div>
<button type="button" onclick="location.href='@Url.Action("Create", "Categories")'">Create</button>

<table class="table table-bordered table-responsive table-hover">
    <tr>
        <th>Id </th>
        <th>Name</th>
        <th></th>
    </tr>
    @foreach (var category in Model)
    {
        <tr>
            <td>@category.Id</td>
            <td>@category.Name</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = category.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = category.Id })
            </td>

        </tr>
    }
</table> 